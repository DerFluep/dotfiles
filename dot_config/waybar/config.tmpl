// =============================================================================
//
// Waybar configuration
//
// Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
//
// =============================================================================

{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",

    // If height property would be not present, it'd be calculated dynamically
    "height": 30,

    "modules-left": [
        "hyprland/workspaces",
        "niri/workspaces",
        "hyprland/submap",
        "hyprland/window",
        "niri/window",
    ],
    "modules-center": [
        "clock",
        "mpris",
    ],
    "modules-right": [
        "network",
        "cpu",
        "temperature",
        "memory",
        "tray",
    ],

    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "clock": {
        "interval": 30,
        "format": "{:%e %b %H:%M}", // Icon: calendar-alt
        "tooltip": true,
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt>{calendar}</tt>"
    },

    "cpu": {
        "interval": 1,
        "format": "Û∞çõ {usage}%", // Icon: microchip
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "memory": {
        "interval": 1,
        "format": "Óâ¶  {used}", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 30,
        "format-wifi": "Ôá´ {essid} ({signalStrength}%)", // Icon: wifi
        "format-ethernet": "Û∞àÄ", // Icon: ethernet
        "format-disconnected": "‚ö† Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}"
    },

    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
          "active": "ÔÑë",
          "default": "ÓÆµ",
        },
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
          "active": "ÔÑë",
          "default": "ÓÆµ",
        },
        {{ if .pc }}
        "persistent-workspaces": {
          "DP-1": [1, 2, 3, 4],
          "DP-2": [5, 6, 7, 8]
        }
        {{ else }}
        "persistent-workspaces": {
            "*": 6
        }
        {{ end}}
    },

    "niri/window": {
        "format": "{}",
    },

    "hyprland/window": {
        "format": "{}",
    },

    {{ if .pc }}
    "temperature": {
      "hwmon-path": "/sys/class/hwmon/hwmon3/temp2_input",
      "interval": 1,
      "format": "Ôãã {temperatureC}¬∞C"
    },
    {{ else }}
    "temperature": {
      "hwmon-path": "/sys/class/hwmon/hwmon2/temp2_input",
      "interval": 1,
      "format": "Ôãã {temperatureC}¬∞C"
    },
    {{ end}}

    "tray": {
        "icon-size": 21,
        "spacing": 5
    },

    "mpris": {
        "interval": 1,
        "dynamic-len": 40,
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
          "default": "‚ñ∂",
          "mpv": "üéµ"
        },
        "status-icons": {
          "paused": "‚è∏"
        },
        // "ignored-players": ["firefox"]
      },
}
